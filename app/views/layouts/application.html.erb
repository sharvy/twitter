<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <div class="container">
      <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
        <a class="my-0 mr-md-auto font-weight-normal h5" href="/">Twitter Clone</a>
        <nav class="my-2 my-md-0 mr-md-3">
          <% if user_signed_in? %>
            <%= link_to current_user.first_name, user_path(current_user), class: "p-2 text-dark" %>
            <%= link_to "Logout", destroy_user_session_path, class: "btn btn-outline-primary", method: :delete %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary" %>
          <% end %>
        </nav>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
